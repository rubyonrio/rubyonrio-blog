<h1>Community members (<%= @members.count %>)</h1>
<% if @members.size > 0 then %>
    <table>
      <tr>
        <th>Username</th>
        <th colspan="3">Actions</th>
      </tr>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.username %></td>
        <td><%= link_to 'Show', admin_member_path(member) %></td>
        <td><%= link_to 'Edit', edit_admin_member_path(member) %></td>
        <td><%= link_to 'Destroy', admin_member_path(member), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>
<% end %>

<br />

<%= link_to 'New Member', new_admin_member_path %>
